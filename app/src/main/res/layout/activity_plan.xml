<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prueba"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/opcionesBasicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/configuraciones"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/boton_plan"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/settings" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="113dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="4"
                android:background="@drawable/etiqueta_plan"
                android:gravity="center"
                android:text="PLAN"
                android:textColor="@color/moradoOscuro" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/grupo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/boton_plan"
                    android:backgroundTint="@color/white"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/message" />

                <ImageButton
                    android:id="@+id/camara"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/boton_plan"
                    android:backgroundTint="@color/white"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/icono_camara" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcionesIniciales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:background="@drawable/boton_plan"
                android:padding="25dp">

                <LinearLayout
                    android:id="@+id/pasosLayOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="45dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/puntas"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="600 pasos"
                        android:textColor="@color/moradoMedio" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mensajePasosPlan"
                        android:gravity="center"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pasosLayOut"
                    android:text="@string/seguirPlan"
                    android:textColor="@color/moradoMedio" />


                <Switch
                    android:id="@+id/confirmacion"
                    android:layout_width="127dp"
                    android:layout_height="49dp"
                    android:layout_below="@id/textView7"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/pasosLayOut"
                    android:checked="true"
                    android:textColor="@color/moradoMedio"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>




</FrameLayout>