<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanActivity">

    <org.osmdroid.views.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/osmMap"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/opcionesBasicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/configuraciones"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/settings"
                    android:layout_weight="0"
                    android:scaleType="center"
                    android:background="@drawable/boton_plan"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/imagenTemperatura"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/parcialmentenublado" />

            </LinearLayout>

            <TextView
                android:id="@+id/tituloPlan"
                android:layout_width="113dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="4"
                android:background="@drawable/etiqueta_plan"
                android:gravity="center"
                android:text="PLAN"
                android:textColor="@color/moradoOscuro" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/botonCamara"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="0"
                    android:background="@drawable/boton_plan"
                    android:padding="10dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/icono_camara" />

                <ImageButton
                    android:id="@+id/puntoEncuentro"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/pin" />

                <ImageButton
                    android:id="@+id/milocalizacion"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0"
                    android:backgroundTint="@color/transparente"
                    app:srcCompat="@drawable/ic_menu_mylocation" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opcionesIniciales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">




            <ImageButton
                android:id="@+id/botonVolverAPlanes"
                android:layout_width="68dp"
                android:layout_height="71dp"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/boton_menu"
                app:srcCompat="@drawable/users" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:background="@drawable/boton_plan"
                android:padding="25dp">

                <LinearLayout
                    android:id="@+id/pasosLayOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hazDado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/mensajePasosPlan" />

                    <TextView
                        android:id="@+id/pasoscantText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/puntas"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="0"
                        android:textColor="@color/moradoMedio" />

                </LinearLayout>

                <TextView
                    android:id="@+id/aunsiguesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pasosLayOut"
                    android:text="@string/seguirPlan"
                    android:textColor="@color/moradoMedio" />


                <Switch
                    android:id="@+id/switchPasos"
                    android:layout_width="72dp"
                    android:layout_height="58dp"
                    android:layout_below="@id/aunsiguesText"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/pasosLayOut"
                    android:checked="true"
                    android:textColor="@color/moradoMedio"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track" />

                <Button
                    android:id="@+id/mostrarRutabutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pasosLayOut"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/moradoMedio"
                    android:text="Mostrar Ruta" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>




</FrameLayout>